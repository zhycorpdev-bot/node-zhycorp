{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist/",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/interfaces"
    ]
  },
  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules/**", "dist"]
}